<%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@order.errors.count, "error") %>
            prohibited this order from being saved:</h2>
          <ul>
            <% @order.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :name %><br />
      <!-- START_HIGHLIGHT -->
      <%= f.text_field :name, size: 40 %>
      <!-- END_HIGHLIGHT -->
    </div>
    <div class="field">
      <%= f.label :address %><br />
      <!-- START_HIGHLIGHT -->
      <%= f.text_area :address, rows: 2, cols: 40 %>
      <!-- END_HIGHLIGHT -->
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <!-- START_HIGHLIGHT -->
      <%= f.email_field :email, size: 40 %>
      <!-- END_HIGHLIGHT -->
    </div>
    <div class="field">
      <%= f.label :size %><br />
      <!-- START_HIGHLIGHT -->
      <%= f.select :size, Order::SIZES,
                   prompt: 'Select size' %>
      <!-- END_HIGHLIGHT -->
    </div>
    <div class="field">
      <%= f.label :text_colour %><br />
      <!-- START_HIGHLIGHT -->
      <%= f.select :colour, Order::COLOURS,
                   prompt: 'Select Colour' %>
      <!-- END_HIGHLIGHT -->
    </div>
    <div class="field">
      <%= f.label :pay_type %><br />
      <!-- START_HIGHLIGHT -->
      <%= f.select :pay_type, Order::PAYMENT_TYPES,
                   prompt: 'Select payment type' %>
      <!-- END_HIGHLIGHT -->
    </div>
    <div class="actions">
      <!-- START_HIGHLIGHT -->

      <!--below is the orig-->
     <!--<%= f.submit 'Place Order' %>-->

      <%= f.submit '', :class => "placeorder_btn" %>
      <!-- END_HIGHLIGHT -->
    </div>
<% end %>
