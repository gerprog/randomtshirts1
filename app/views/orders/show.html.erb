<div id="main_no_row">
  <p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @order.name %>
</p>

<p>
  <b>Address:</b>
  <%= @order.address %>
</p>

<p>
  <b>Email:</b>
  <%= @order.email %>
</p>

<p>
  <b>Items:</b>
  <%= render(@order.cart_line_items.to_a)%>
</p>

  <p>
  <b>Size:</b>
  <%= @order.size %>
</p>

  <p>
    <b>Text Colour:</b>
    <%= @order.colour %>
  </p>

<p>
  <b>Pay type:</b>
  <%= @order.pay_type %>
</p>

  <% @order.cart_line_items.to_a.each do |item| %>
  <div id="tshirt_sml">

    <div id="tshirt_sml_image" class="sml_image">



          <%= image_tag(item.shape.lrg_image_url) %>

          </div>

          <div id="tshirt_sml_text">
        <span class="tshirt_sml_text">
         <%= item.shape.text %>
          </span>
          </div>

          </div>
      <% end %>


  <% if current_user and current_user.admin %>
<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
  <% end %>
  </div>